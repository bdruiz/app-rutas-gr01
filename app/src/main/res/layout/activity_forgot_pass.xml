<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="?attr/colorOnPrimary"
    tools:context="com.example.apprutasmintic.ActivityForgotPass">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTituloOlvidePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:elevation="12dp"
        app:cardCornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgforgotpass"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp"
                android:src="@drawable/forgot" />

            <TextView
                android:id="@+id/tvforgotpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="Recuperar ContraseÃ±a"
                android:textColor="@color/themeColor"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEmailForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMailForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/tex_send_forgot_pwd"
            android:inputType="textEmailAddress"
            android:layout_marginTop="48dp"
            android:background="@color/white"
            android:maxLines="1"  />
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/btnSubmitForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_pwd" />
</LinearLayout>